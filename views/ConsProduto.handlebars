<div class="container mx-auto px-4">
    <h2 class="text-2xl font-bold mb-4">Produtos Cadastrados</h2>
    <div class="overflow-x-auto">
        <table class="table-auto w-full border-collapse border border-gray-200">
            <thead>
                <tr class="bg-gray-100">
                    <th class="px-4 py-2 text-left">Tipo</th>
                    <th class="px-4 py-2 text-left">Nome</th>
                    <th class="px-4 py-2 text-left">Validade</th>
                    <th class="px-4 py-2 text-left">Observações</th>
                    <th class="px-4 py-2 text-left">Ações</th>
                </tr>
            </thead>
            <tbody>
                {{#each data}}
                <tr class="border-b border-gray-200">
                    <td class="px-4 py-2">{{this.productType}}</td>
                    <td class="px-4 py-2">{{this.productName}}</td>
                    <td class="px-4 py-2">{{this.validity}}</td>
                    <td class="px-4 py-2">{{this.observations}}</td>
                    <td class="px-4 py-2">
                        <a href="/EditProduto/{{id}}" class="text-blue-500 hover:text-blue-700 mr-2">Editar</a>
                        <a href="/excluir/{{id}}" class="text-red-500 hover:text-red-700">Excluir</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>
